<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        card_view:cardElevation="5dp"
        android:textAlignment="center"
        android:clickable="true"
        android:layout_margin="20dp"
        card_view:cardBackgroundColor="#8E4529"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="25dp">

        <androidx.cardview.widget.CardView
            card_view:cardElevation="5dp"
            android:textAlignment="center"
            android:id="@+id/kampanyaLayoutSil"
            android:clickable="true"
            android:layout_marginBottom="12dp"
            card_view:cardBackgroundColor="#DDCEC8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="25dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                android:screenReaderFocusable="true"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:id="@+id/asiTakipPetNmae"
                    android:layout_margin="10dp"
                    android:text="BAÅžLIK"
                    android:gravity="center"
                    android:textColor="#884327">

                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardElevation="5dp"
                    android:textAlignment="center"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    card_view:cardBackgroundColor="#DDCEC8"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    card_view:cardCornerRadius="160dp">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/asiTakipImage"
                        android:layout_margin="10dp"
                        android:layout_gravity="center">

                    </de.hdodenhof.circleimageview.CircleImageView>
                </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="-10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:text="VACCINATED"
                            card_view:cornerRadius="20dp"
                            android:textSize="10dp"
                            android:layout_margin="15dp"
                            android:background="@drawable/ic_baseline_check_circle_outline_24"
                            android:layout_gravity="center"
                            android:id="@+id/asiTakipOkButon"
                            android:layout_height="40dp">

                        </ImageView>

                        <ImageView
                            android:layout_width="60dp"
                            android:text="CALL"
                            android:textSize="12dp"
                            card_view:cornerRadius="20dp"
                            android:background="@drawable/ic_baseline_local_phone_"
                            android:layout_gravity="center"
                            android:layout_margin="15dp"
                            android:id="@+id/asiTakipAraButon"
                            android:layout_height="50dp">

                        </ImageView>

                        <ImageView
                            android:layout_width="40dp"
                            android:text="VACCINATED NOT MADE"
                            android:textSize="10dp"
                            card_view:cornerRadius="20dp"
                            android:background="@drawable/ic_baseline_close_24"
                            android:layout_margin="15dp"
                            android:layout_gravity="center"
                            android:id="@+id/asiTakipKapatButon"
                            android:layout_height="40dp">

                        </ImageView>

                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/asiTakipBilgi"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="text"
                   android:layout_width="match_parent"
                    android:textColor="#4C494A"
                    android:textSize="15dp"
                    android:textStyle="bold">

                </TextView>


            </LinearLayout>




        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</LinearLayout>