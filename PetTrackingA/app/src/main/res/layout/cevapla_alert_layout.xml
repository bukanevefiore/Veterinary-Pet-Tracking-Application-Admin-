<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        card_view:cardElevation="5dp"
        android:textAlignment="center"
        android:clickable="true"
        card_view:cardBackgroundColor="#F3C4D5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:screenReaderFocusable="true"
            android:layout_margin="2dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ANSWER .."
        android:id="@+id/cevapLayout_sorutext"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColor="#b4004e">

    </TextView>

            <androidx.cardview.widget.CardView

                android:layout_width="320dp"
                card_view:cardElevation="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="20dp"
                card_view:cardBackgroundColor="#F3C4D5"
                android:layout_height="100dp"
                card_view:cardCornerRadius="25dp"
                android:layout_alignParentBottom="true"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        android:layout_marginLeft="10dp"
                       >

                    </ImageView>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="7"
                        android:hint="Your question .."
                        card_view:suffixTextColor="#F3C4D5"
                        card_view:hintTextColor="#F3C4D5"
                        >

                        <!--this is the actual edit text which takes the input-->
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/cevapVerEditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="8dp"
                            android:layout_marginRight="15dp"
                            android:minHeight="60dp"
                            android:backgroundTint="@android:color/transparent" />

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                card_view:cardElevation="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="20dp"
                card_view:cardBackgroundColor="#F3C4D5"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="25dp"
                android:layout_alignParentBottom="true"

                >

                <Button
                    android:id="@+id/cevapVerButon"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:backgroundTint="#b4004e"
                    android:text="SEND"
                    android:textColorLink="#F3C4D5"
                    android:textSize="18dp"
                   ></Button>

            </androidx.cardview.widget.CardView>
</LinearLayout>
</androidx.cardview.widget.CardView>

</LinearLayout>