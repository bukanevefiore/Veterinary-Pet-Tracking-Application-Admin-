<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="40dp"
    android:background="#7E258C"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="5dp"
        android:textAlignment="center"
        android:clickable="true"
        card_view:cardBackgroundColor="#EDBFF4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="20dp">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="5dp"
        android:textAlignment="center"
        android:clickable="true"
        android:layout_margin="7dp"
        card_view:cardBackgroundColor="#F4D9F8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="20dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD NEW VACCÄ°NE"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="#7E258C">

        </TextView>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        app:boxCornerRadiusBottomStart="20dp"
        android:layout_gravity="center"
        android:hint="Enter the name of the vaccine .."
        android:layout_height="wrap_content">
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="300dp"
        android:id="@+id/asiname_ekle"
        android:background="@drawable/background_transparent"
        android:layout_height="60dp">

    </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>


        <CalendarView
            android:layout_width="match_parent"
            android:id="@+id/asi_tarih"
            android:layout_height="match_parent">

        </CalendarView>


    <com.google.android.material.button.MaterialButton
        android:layout_width="100dp"
        android:text="SAVE"
        android:textSize="12dp"
        card_view:cornerRadius="10dp"
        android:backgroundTint="#6a0080"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:id="@+id/asiEkleKaydetButon"
        android:layout_height="50dp">

    </com.google.android.material.button.MaterialButton>



    </LinearLayout>
    </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>


</LinearLayout>