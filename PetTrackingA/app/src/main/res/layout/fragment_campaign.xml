<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#D6EDBB"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragments.CampaignFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#4A7E0D"
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_height="40dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/kampanya_backImage"
            android:background="@drawable/ic_baseline_arrow_back_24">

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="CURRENT OFFERS"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textColor="#E3E3E3">

        </TextView>

    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:id="@+id/kampanya_recyclerview">

    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/yeniKampanyaEkleButon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/kampanya_recyclerview"
        android:layout_alignRight="@id/kampanya_recyclerview"
        android:layout_marginTop="-60dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:backgroundTint="#4A7E0D"
        android:src="@drawable/ic_baseline_notification_add_24">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>

</LinearLayout>