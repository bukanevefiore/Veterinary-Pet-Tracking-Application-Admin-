<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:background="#6a0080"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="5dp"
        android:textAlignment="center"
        android:clickable="true"
        card_view:cardBackgroundColor="#DC96E6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="15dp">

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardElevation="5dp"
            android:textAlignment="center"
            android:clickable="true"
            android:layout_marginBottom="8dp"
            card_view:cardBackgroundColor="#EDBFF4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="15dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/kullaniciLayoutSil"
                android:screenReaderFocusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:text="Are you sure you want to delete?"
                    android:gravity="center"
                    android:textColor="#6a0080"></TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:text="DELETE"
                        card_view:cornerRadius="10dp"
                        android:textSize="10dp"
                        android:backgroundTint="#6a0080"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:id="@+id/kullaniciSilButon"
                        android:layout_height="wrap_content">

                    </com.google.android.material.button.MaterialButton>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:text="CANCEL"
                        android:textSize="12dp"
                        card_view:cornerRadius="10dp"
                        android:backgroundTint="#6a0080"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:id="@+id/alertKullaniciKapatButon"
                        android:layout_height="wrap_content">

                    </com.google.android.material.button.MaterialButton>


                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</LinearLayout>