<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:background="#B0DA80"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="5dp"
        android:textAlignment="center"
        android:clickable="true"
        card_view:cardBackgroundColor="#6D9E35"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="15dp">

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardElevation="5dp"
            android:textAlignment="center"
            android:clickable="true"
            android:layout_marginBottom="8dp"
            card_view:cardBackgroundColor="#B0DA80"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="15dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/kampanyaLayoutSil"
                android:screenReaderFocusable="true"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:id="@+id/kampanya_baslik"
                    android:layout_margin="10dp"
                    android:text="Are you sure you want to delete?"
                    android:gravity="center"
                    android:textColor="#4A7E0D"></TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="100dp"
                        android:text="DELETE"
                        card_view:cornerRadius="20dp"
                        android:textSize="10dp"
                        android:backgroundTint="#416715"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:id="@+id/kampanyaSilButon"
                        android:layout_height="50dp">

                    </com.google.android.material.button.MaterialButton>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="100dp"
                        android:text="CANCEL"
                        android:textSize="12dp"
                        card_view:cornerRadius="20dp"
                        android:backgroundTint="#416715"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:id="@+id/alertKapatButon"
                        android:layout_height="50dp">

                    </com.google.android.material.button.MaterialButton>


                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</LinearLayout>