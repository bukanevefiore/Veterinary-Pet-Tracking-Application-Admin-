<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragments.KullaniciPetFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="PETS"
        card_view:cornerRadius="20dp"
        android:background="#6a0080"
        android:gravity="center"
        android:textColor="#F3DBF8">

    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/petler_recyclerview">

    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#6a0080"
        android:id="@+id/petEkleButon"
        android:src="@drawable/ic_baseline_notification_add_24"
        android:layout_marginTop="-60dp"
        android:layout_gravity="right"
        >

    </com.google.android.material.floatingactionbutton.FloatingActionButton>


</LinearLayout>